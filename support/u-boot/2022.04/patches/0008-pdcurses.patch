+    PDC_LOG("wattr_get() - called\n");
+
+    INTENTIONALLY_UNUSED_PARAMETER( opts);
+    assert( win);
+    if (!win)
+        return ERR;
+
+    if (attrs)
+        *attrs = win->_attrs & (A_ATTRIBUTES & ~A_COLOR);
+
+    if (color_pair)
+        *color_pair = (short)PAIR_NUMBER(win->_attrs);
