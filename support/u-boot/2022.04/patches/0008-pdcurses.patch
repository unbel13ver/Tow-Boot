+	if (term_get_char(&c) || c != cESC)
+		return -1;
+
+	if (term_get_char(&c) || c != '[')
+		return -1;
+
+	n[0] = 0;
+	while (1) {
+		if (!term_get_char(&c)) {
+			if (c == ';') {
+				i++;
+				if (i >= num)
+					return -1;
+				n[i] = 0;
+				continue;
+			} else if (c == end_char) {
+				break;
+			} else if (c > '9' || c < '0') {
+				return -1;
+			}
+
+			/* Read one more decimal position */
+			n[i] *= 10;
+			n[i] += c - '0';
+		} else {
+			return -1;
+		}
+	}
+	if (i != num - 1)
+		return -1;
+
+	return 0;
