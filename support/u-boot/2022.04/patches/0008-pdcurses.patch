+    return OK;
+}
+
+int raw(void)
+{
+    PDC_LOG("raw() - called\n");
+
+    assert( SP);
+    if (!SP)
+        return ERR;
+
+    PDC_set_keyboard_binary(TRUE);
+    SP->raw_inp = TRUE;
+
+    return OK;
