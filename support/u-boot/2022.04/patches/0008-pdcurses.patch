+int winsnstr(WINDOW *win, const char *str, int n)
+{
+#ifdef PDC_WIDE
+    wchar_t wstr[513], *p;
+    int i;
+#endif
+    int len;
+
+    PDC_LOG("winsnstr() - called: string=\"%s\" n %d \n", str, n);
+
+    assert( win);
+    assert( str);
+    if (!win || !str)
