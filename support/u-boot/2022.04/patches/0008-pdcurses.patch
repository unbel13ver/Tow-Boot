+
+int wattroff(WINDOW *win, chtype attrs)
+{
+    PDC_LOG("wattroff() - called\n");
+
+    assert( win);
+    if (!win)
+        return ERR;
+
+    win->_attrs &= (~attrs & A_ATTRIBUTES);
+
