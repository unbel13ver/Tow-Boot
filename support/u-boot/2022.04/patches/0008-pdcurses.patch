+       while(!typeahead(stdin))
+        {
+          /* do something until any key is pressed... */
+        }
+
+ use...
+
+       /* getch() to return ERR if no key pending */
+       nodelay(stdscr,TRUE);
+       while(getch() == (ERR))
+        {
+          /* do something until any key is pressed... */
+        }
